<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo_entendeme" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Acerca de Entendeme"
        android:id="@+id/textView5"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="20dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Entendeme es una aplicación mobile para Android capaz de recibir como entrada un texto escrito a mano (por medio de la cámara del celular o un archivo adjunto) y transformarlo a formato digital para guardarlo y compartirlo de manera senacilla."
        android:id="@+id/textView6"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="20dp"
        android:textAlignment="center" />

</LinearLayout>
